<!DOCTYPE html>

<html>
	<head>
		<link rel="stylesheet" href="/css/main.css" />
		<style>
			h3 {
				margin: 10px;
				white-space: pre-line;
			}
		</style>
		<script type="text/javascript">
			var cpt = 30;
			var x ;

			function decompte()
			{
				if(cpt>=0)
				{
					if(cpt>1)
					{
						var sec = " secondes.";
					} else {
						var sec = " seconde.";
					}
					document.getElementById("crono").innerHTML = cpt;
					cpt-- ;
					x = setTimeout("decompte()",1000) ;
				} else {
					clearTimeout(x) ;
					document.location.href="/check";
				}
			}
		</script>
	</head>
	<body onload="decompte()">
		<div id="header">
			<div id="account_section">
				<img src="/svg/account_icon.svg" id="account" />
			</div>
			<div id="play_section">
				<a href="/play"><button id="play_button">PLAY</button></a>
			</div>
			<div>
				<img src="/svg/logout.svg" id="title_img" />
			</div>
		</div>
		<div id="game">
			<div id="crono">
			</div>
			<h3 id="quote">"<%= quote %>"</h3>
			<form action="/check" method="POST">
				<button class="button" name="button" value="<%= options[0] %>"><%= options[0] %></button>
				<button class="button" name="button" value="<%= options[1] %>"><%= options[1] %></button>
				<button class="button" name="button" value="<%= options[2] %>"><%= options[2] %></button>
				<button class="button" name="button" value="<%= options[3] %>"><%= options[3] %></button>
			</form>
			<div>
				<hr id="hr_menu" />
				<a href="/main"><button id="main_menu">MAIN MENU</button></a>
			</div>
		</div>
		<div id="main">
			<div id="text">
				<p class="footer_sections">About us</p>
				<p class="footer_sections">Contact</p>
				<p id="rapguesser">RapGuesser by @jcreux</p>
				<p class="footer_sections">Report a bug</p>
				<p class="footer_sections">Help</p>
			</div>
		</div>
	</body>
</html>